<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="com.whpu.onlineShoppingMall.category.entity.Category" table="category">
		<id name="cid">
			<generator class="native"/>
		</id>
		<property name="cname"/>
		
		<!-- 配置二级分类的集合 -->
		<set order-by="csid" name="categorySeconds" lazy="false" cascade="delete">
			<key column="cid"/>
			<one-to-many class="com.whpu.onlineShoppingMall.categorysecond.entity.CategorySecond"/>
		</set>
	</class>
</hibernate-mapping>